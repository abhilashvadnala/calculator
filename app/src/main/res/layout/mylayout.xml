<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black" >

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:background="@android:color/black"
        android:gravity="right"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="50dp"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="70sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@android:color/black">

        <Button
            android:id="@+id/opAllClear"
            android:layout_width="0dp"
            android:text="AC"
            android:textSize="40sp"
            android:textColor="@android:color/black"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/specialButtonColor"/>

        <Button
            android:id="@+id/opPlusOrMinus"
            android:layout_width="0dp"
            android:text="+/-"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/darker_gray"/>

        <Button
            android:id="@+id/opPercentage"
            android:layout_width="0dp"
            android:text="%"
            android:textSize="50sp"
            android:textColor="@android:color/black"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@android:color/darker_gray"/>

        <Button
            android:id="@+id/opDiv"
            android:layout_width="0dp"
            android:text="/"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/opButtonColor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@android:color/black">

        <Button
            android:id="@+id/num7"
            android:layout_width="0dp"
            android:text="7"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/numButtonColor" />

        <Button
            android:id="@+id/num8"
            android:layout_width="0dp"
            android:text="8"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/numButtonColor"/>

        <Button
            android:id="@+id/num9"
            android:layout_width="0dp"
            android:text="9"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/numButtonColor"/>

        <Button
            android:id="@+id/opMul"
            android:layout_width="0dp"
            android:text="*"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/opButtonColor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@android:color/black">

        <Button
            android:id="@+id/num4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/numButtonColor"
            android:text="4"
            android:textColor="@android:color/white"
            android:textSize="50sp" />
        <Button
            android:id="@+id/num5"
            android:layout_width="0dp"
            android:text="5"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/numButtonColor"/>

        <Button
            android:id="@+id/num6"
            android:layout_width="0dp"
            android:text="6"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/numButtonColor"/>

        <Button
            android:id="@+id/opDiff"
            android:layout_width="0dp"
            android:text="-"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/opButtonColor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@android:color/black">

        <Button
            android:id="@+id/num1"
            android:layout_width="0dp"
            android:text="1"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/numButtonColor"/>

        <Button
            android:id="@+id/num2"
            android:layout_width="0dp"
            android:text="2"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/numButtonColor"/>

        <Button
            android:id="@+id/num3"
            android:layout_width="0dp"
            android:text="3"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/numButtonColor"/>

        <Button
            android:id="@+id/opSum"
            android:layout_width="0dp"
            android:text="+"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/opButtonColor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@android:color/black">

        <Button
            android:id="@+id/num0"
            android:layout_width="155dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:backgroundTint="@color/numButtonColor"
            android:gravity="center"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="50sp" />

        <Button
            android:id="@+id/point"
            android:layout_width="0dp"
            android:text="."
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/numButtonColor"/>

        <Button
            android:id="@+id/opEquals"
            android:layout_width="0dp"
            android:text="="
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/opButtonColor"/>
    </LinearLayout>

</LinearLayout>